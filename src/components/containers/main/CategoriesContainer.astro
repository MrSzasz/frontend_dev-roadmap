---
import CategoryLink from "@/components/Main/Categories/CategoryLink.astro";
import SectionLayout from "@/layouts/SectionLayout.astro";

const categories = [
  {
    name: "All",
    href: "/notes",
  },
  {
    name: "Front-end",
    href: "/notes/frontend",
  },
  {
    name: "Back-end",
    href: "/notes/backend",
  },
  {
    name: "Testing",
    href: "/notes/testing",
  },
  {
    name: "Misc",
    href: "/notes/misc",
  },
];
---

<SectionLayout>
  <div
    class="grid grid-cols-[min-content_auto] md:grid-cols-2 gap-4 md:gap-0 p-4 h-fit md:h-full w-full my-10"
    id="contact"
  >
    <div class="relative h-full">
      <h2 class="text-6xl md:text-7xl sticky top-10 rotateText wk-h3">
        CATEGORIES
      </h2>
    </div>
    <div class="flex flex-col gap-4">
      {categories.map((category) => <CategoryLink {...category} />)}
    </div>
  </div>
</SectionLayout>
